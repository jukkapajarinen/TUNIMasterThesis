function Dijkstra(Graph, source):
  dist[source]  := 0
  for each vertex v in Graph:
    if v != source
      dist[v]  := infinity
      previous[v]  := undefined
    end if
    add v to Q
  end for

  while Q is not empty:
    u := vertex in Q with min dist[u]
    remove u from Q
    for each neighbor v of u:
      alt := dist[u] + length(u, v)
      if alt < dist[v]:
        dist[v]  := alt
        previous[v]  := u
      end if
    end for
  end while
  return dist[], previous[]
end function